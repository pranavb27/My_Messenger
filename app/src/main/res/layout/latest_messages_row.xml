<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="vertical">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ProfilePhotoLatestMessageRow"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:civ_border_width="2dp"
        app:civ_border_color="@android:color/black"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <TextView
        android:id="@+id/UsernameLatestMessageRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        tools:text="Username"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/ProfilePhotoLatestMessageRow"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/MessageLatestMessageRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        android:text="Latest Message"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ProfilePhotoLatestMessageRow"
        app:layout_constraintTop_toBottomOf="@+id/UsernameLatestMessageRow" />
</androidx.constraintlayout.widget.ConstraintLayout>